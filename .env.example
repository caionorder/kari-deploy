# Kari Ajuda - Environment Variables
# Copy this file to .env and configure with your production values

# Database Configuration
DB_NAME=kariajuda
DB_USER=kariajuda
DB_PASSWORD=your-secure-database-password-here

# JWT Secret Key (generate a strong random key)
SECRET_KEY=your-super-secret-jwt-key-change-in-production

# Environment
ENVIRONMENT=production

# CORS Origins (adicione todos os domínios que precisam acessar a API)
# Para produção com subdomínios
BACKEND_CORS_ORIGINS=["https://kariajuda.com","https://www.kariajuda.com","https://admin.kariajuda.com","http://localhost:3000","http://localhost:3002"]

# Domain Configuration
DOMAIN=kariajuda.com
API_DOMAIN=api.kariajuda.com
ADMIN_DOMAIN=admin.kariajuda.com

# Let's Encrypt Email
LETSENCRYPT_EMAIL=admin@kariajuda.com

# Traefik Dashboard (generate with: htpasswd -nb admin your-password)
TRAEFIK_USER=admin:$$2y$$10$$...

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@kariajuda.com

# Payment Gateway (Optional)
PAYMENT_API_KEY=
PAYMENT_SECRET_KEY=

# GitHub Repository URLs
GITHUB_API_REPO=git@github.com:caionorder/kari-api.git
GITHUB_SITE_REPO=git@github.com:caionorder/kari-site.git
GITHUB_ADMIN_REPO=git@github.com:caionorder/kari-admin.git

# Redis Configuration
REDIS_PASSWORD=

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Monitoring (Optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=